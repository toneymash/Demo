<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/b1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.landingpage">



    <Button
        android:id="@+id/buttonlanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4B2259FF"
        android:text="Join us"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:textStyle="italic"
        android:id="@+id/textView2"
        android:layout_width="412dp"
        android:layout_height="62dp"
        android:background="#322144F3"
        android:gravity="center"
        android:text="WELCOME TO SMART INVEST"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonlanding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="124dp"
        android:layout_height="135dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/lg1" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_width="91dp"
        android:layout_height="36dp"
        android:layout_marginTop="40dp"
        android:text="VISION"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="268dp"
        android:layout_height="189dp"
        android:layout_marginTop="8dp"
        android:text="To revolutionize the way individuals manage and grow their investments by providing an intuitive, secure, and innovative mobile platform that empowers users to make informed financial decisions"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:text="Mission"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="252dp"
        android:layout_height="117dp"
        android:layout_marginTop="8dp"
        android:text="To democratize investment opportunities by delivering a user-friendly, secure, and insightful mobile app that simplifies the investment process and provides personalized guidance to help users achieve their financial goals."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_width="87dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:text="Focus"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="251dp"
        android:layout_height="102dp"
        android:layout_marginTop="16dp"
        android:text="Invest in the latest technologies  that will creat  a positive impact on users "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</androidx.constraintlayout.widget.ConstraintLayout>