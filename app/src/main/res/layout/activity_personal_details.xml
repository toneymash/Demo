<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PersonalDetailsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personaldetails.PersonalDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesron details"
            android:textSize="30sp"
            android:layout_margin="20dp"
            />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/middleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Middle Name"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/dateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/nationality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nationality"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/postalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postal Address"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank details"
            android:textSize="30sp"
            />
        <EditText
            android:textColor="@color/black"
            android:id="@+id/accountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Name"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/accountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Number"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/accountType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Type"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/bankBranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bank Branch"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/bankCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bank Code"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/mpesaNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mpesa Number"/>

        <TextView
            android:textColor="@color/black"
            android:textSize="30sp"

            android:id="@+id/kin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Next of kin"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/Relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Relationship"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="id/passport"/>

        <EditText
            android:id="@+id/telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telephone no"/>
        <Button
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            />

    </LinearLayout>

</ScrollView>