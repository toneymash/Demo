<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1C1F8"
    tools:context=".ui.productsActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:text="Bonds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="392dp"
        android:layout_height="94dp"
        android:text="What are  bonds?
.A  bond is a type of debt-based investment, where you loan money to a government in return for an agreed rate of interest."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="227dp"
        android:layout_height="24dp"
        android:text="Types of Bonds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="409dp"
        android:layout_height="146dp"
        android:text="Treasury Bonds (T-Bonds): Medium to long-term securities with maturities ranging from 2 to 30 years.
•
•T-Bonds: The interest rates (coupon rates) for T-Bonds are also determined during the auction and vary depending on the bond's maturity and prevailing market conditionsdepending on the duration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="211dp"
        android:layout_height="42dp"
        android:text="Advantages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="363dp"
        android:layout_height="99dp"
        android:text="offer a fixed rate, meaning that the interest rate determined at auction is locked in for the entire life of the bond.
•Safety and Stability: Government bonds are typically considered one of the safest investments available. Since they are backed by the government's credit,
•Liquidity: Government bonds are often highly liquid, meaning they can be easily bought and sold in the secondary market.
RISK
•Interest Rate Risk: The value of bonds can fluctuate with changes in interest rates. If rates rise, bond prices fall, and vice versa.
•Inflation Risk: Inflation can erode the purchasing power of the interest payments and principal repayment.
"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />



    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start investing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="390dp"
        android:layout_height="86dp"
        android:src="@drawable/bar"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />
</androidx.constraintlayout.widget.ConstraintLayout>